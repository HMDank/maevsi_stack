version: 1.4

jobs:
  DBBackup:
    cmd: |
      source .venv/bin/activate
      /srv/sinks/sentry/in-progress.sh
      aws s3 sync /backups s3://$(cat /run/secrets/jobber_aws-bucket)/backups
    time: 0 0 0 *
    notifyOnSuccess:
      - type: program
        path: /srv/sinks/sentry/ok.sh
    notifyOnError:
      - type: program
        path: /srv/sinks/sentry/error.sh
    notifyOnFailure:
      - type: program
        path: /srv/sinks/sentry/error.sh
