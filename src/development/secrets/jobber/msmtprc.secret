# Set default values for all following accounts.
defaults
auth           on
tls            on
tls_trust_file /etc/ssl/certs/ca-certificates.crt
syslog         on

# localhost
account        localhost
host           localhost
port           25
from           mail@localhost
user           mail@localhost
auth           off
tls            off

# Set a default account
account default : localhost
aliases        /etc/aliases
